{% extends '::base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-3 filter-div">
                {% include '@App/Form/filterEmployees.html.twig' %}
            </div>
            <div class="col-md-9 col-sm-9">

                {% include '@App/Common/flash_message.html.twig' %}

                {#
                {{ render(controller( 'AppBundle:Employee:employeeFilter')) }}
                #}


                {# total items count #}
                <div class="well">
                    <span class="text-success">Всего сотрудников:</span> {{ employees.getTotalItemCount }}
                </div>
                <table class="table table-bordered table-hover main-employees-list">
                    <thead>
                    <tr class="bg-info">
                        <th class="text-primary">
                            ФИО сотрудника
                        </th>
                        <th class="text-primary">
                            Дата приема на работу
                        </th>
                        <th class="text-primary">
                            Позиция
                        </th>
                    </tr>
                    </thead>

                    <tr class="bg-warning">
                        {# sorting of properties based on query components #}
                        <td>
                            <span class="glyphicon glyphicon-sort"></span>
                            {{ knp_pagination_sortable(employees, 'Сортировать', 'e.lastName') }}
                        </td>
                        <td>
                            <span class="glyphicon glyphicon-sort"></span>
                            {{ knp_pagination_sortable(employees, 'Сортировать', 'e.employeeSince') }}
                        </td>
                        <td>
                            <span class="glyphicon glyphicon-sort"></span>
                            {{ knp_pagination_sortable(employees, 'Сортировать', 'e.position') }}
                        </td>
                    </tr>

                    {% for employee in employees %}
                        <tr>
                            <td>
                                <a href="{{ path('show_employee', {'id': employee.id}) }}">
                                    {{ employee.lastName }} {{ employee.firstName }} {{ employee.fatherName }}
                                </a>

                            </td>
                            <td>
                                {{ employee.employeeSince|date('d.m.Y') }}
                            </td>
                            <td>
                                {{ employee.position }}
                            </td>
                        </tr>
                    {% endfor %}
                </table>
                {{ knp_pagination_render(employees) }}
            </div>
        </div>
    </div>

{% endblock body %}