                                    {% if is_granted('ROLE_ADMIN') %}
                                        <th>
                                        </th>
                                    {% endif %}

                                </tr>
                                </thead>
                                {% for mac in macs %}

                                    <tr>
                                        <td>
                                            {{ mac.name }}
                                        </td>
                                        <td>
                                            {{ mac.ram }}
                                        </td>
                                        <td>
                                            {% if mac.ssd is not null %}
                                                {{ mac.ssd }}
                                            {% else %}
                                                0
                                            {% endif %}

                                        </td>
                                        <td>
                                            {% if mac.hdd is not null %}
                                                {{ mac.hdd }}
