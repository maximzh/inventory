{% extends '::base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-bordered table-hover">
                    <thead>
                    <tr class="bg-info">
                        <th class="text-primary">
                            Название устройства
                        </th>
                        <th class="text-primary">
                            Тип устройства
                        </th>
                        <th class="text-primary">
                            Статус устройства
                        </th>
                    </tr>
                    </thead>
                    {% for device in devices %}
                        <tr>
                            <td>
                                <a href="{#{{ path('show_employee', {'id': employee.id}) }}#}">
                                    {{ device.name }}
                                </a>

                            </td>
                            <td>
                                {{ device.type }}
                            </td>
                            <td>
                                {{ device.status }}
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock body %}