{% extends '::base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-bordered table-hover">
                    <thead>
                    <tr class="bg-info">
                        <th class="text-primary">
                            Название устройства
                        </th>
                        <th class="text-primary">
                            Тип устройства
                        </th>
                        <th class="text-primary">
                            В пользовании у сотрудника
                        </th>
                    </tr>
                    </thead>
                    {% for mac in macs %}
                        <tr>
                            <td>
                                <a href="{{ path('edit-mac', {'id': mac.id}) }}">
                                    {{ mac.name }}
                                </a>

                            </td>
                            <td>
                                {{ mac.type }}
                            </td>
                            <td>
                                {% if mac.employee is not null %}
                                    {{ mac.employee.lastName }} {{ mac.employee.firstName }}
                                {% else %}
                                    Нет
                                {% endif %}

                            </td>
                        </tr>
                    {% endfor %}
                    {% for keyboard in keyboards %}
                        <tr>
                            <td>
                                {{ keyboard.name }}
                            </td>
                            <td>
                                {{ keyboard.type }}
                            </td>
                            <td>
                                {{ keyboard.status }}
                            </td>
                        </tr>
                    {% endfor %}
                    {% for headphone in headphones %}
                        <tr>
                            <td>
                                {{ headphone.name }}
                            </td>
                            <td>
                                {{ headphone.type }}
                            </td>
                            <td>
                                {{ headphone.status }}
                            </td>
                        </tr>
                    {% endfor %}
                    {% for armchair in armchairs %}
                        <tr>
                            <td>
                                <a href="{{ path('edit-armchair', {'id': armchair.id}) }}">
                                    {{ armchair.name }}
                                </a>

                            </td>
                            <td>
                                {{ armchair.type }}
                            </td>
                            <td>
                                {% if armchair.employee is not null %}
                                    {{ armchair.employee.lastName }} {{ armchair.employee.firstName }}
                                {% else %}
                                    Нет
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    {% for monitor in monitors %}
                        <tr>
                            <td>
                                {{ monitor.name }}
                            </td>
                            <td>
                                {{ monitor.type }}
                            </td>
                            <td>
                                {{ monitor.status }}
                            </td>
                        </tr>
                    {% endfor %}
                    {% for mouse in mouses %}
                        <tr>
                            <td>
                                {{ mouse.name }}
                            </td>
                            <td>
                                {{ mouse.type }}
                            </td>
                            <td>
                                {{ mouse.status }}
                            </td>
                        </tr>
                    {% endfor %}
                    {% for usbhub in usbhubs %}
                        <tr>
                            <td>
                                <a href="{{ path('edit-usbhub', {'id': usbhub.id}) }}">
                                    {{ usbhub.name }}
                                </a>

                            </td>
                            <td>
                                {{ usbhub.type }}
                            </td>
                            <td>
                                {% if usbhub.employee is not null %}
                                    {{ usbhub.employee.lastName }} {{ usbhub.employee.firstName }}
                                {% else %}
                                    Нет
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock body %}