{% extends '::base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">

            <div class="panel">
                <div class="panel-heading bg-purple">
                    <img src="{{ asset('images/macmini32.png') }}">
                    Mac mini
                </div>
                <div class="panel-body bg-light-grey">
                    <table class="table">
                        <tr>
                           <td>Модель</td><td>{{ mac.name }}</td>
                        </tr>
                        <tr>
                            <td>
                                <img src="{{ asset('images/ram96.png') }}">
                                RAM
                            </td>
                            <td>
                                <h3>
                                    {{ mac.ram }}

                                </h3>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <img src="{{ asset('images/ssd96.png') }}">

                                SSD
                                </td>
                            <td>
                                <h3>
                                    {{ mac.ssd }}
                                </h3>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <img src="{{ asset('images/hdd96.png') }}">
                                HDD
                            </td>
                            <td>
                                <h3>
                                    {{ mac.hdd }}
                                </h3>

                            </td>
                        </tr>
                        <tr>
                            <td>
                                <img src="{{ asset('images/employ96.png') }}">
                            </td>
                            <td>
                                {% if mac.employee is not null %}
                                    <h3>
                                        <a href="{{ path('show_employee', {'id': mac.employee.id}) }}">
                                            {{ mac.employee.lastName }} {{ mac.employee.firstName }}
                                        </a>
                                    </h3>


                                {% else %}
                                    <strong class="text-danger">-</strong>

                                {% endif %}
                            </td>
                        </tr>
                        {% if is_granted('ROLE_ADMIN') %}
                            <tr>
                                <td>
                                    <a href="{{ path('edit-mac', {'id': mac.id}) }}"><h3 class="glyphicon glyphicon-pencil"></h3></a>

                                </td>
                                <td class="text-right">
                                    <br>
                                    {% if deleteForm is not null %}
                                        {{ form_start(deleteForm, {attr : {onsubmit: 'return confirm("Удалить Mac Mini?");' }}) }}
                                        {{ form_widget(deleteForm.submit) }}
                                        {{ form_end(deleteForm) }}
                                    {% endif %}
                                </td>
                            </tr>
                        {% endif %}
                    </table>



                </div>
            </div>



        </div>
    </div>
</div>

{% endblock body %}

