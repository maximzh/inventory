{% extends '::base.html.twig' %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            {% include '@App/Common/flash_message.html.twig' %}
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ employee.lastName }} {{ employee.firstName }} {{ employee.fatherName }}</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class=" col-md-12 col-lg-12 ">
                            <table class="table table-user-information">
                                <tbody>
                                <tr>
                                    <td>Позиция:</td>
                                    <td>{{ employee.position }}</td>
                                </tr>
                                <tr>
                                    <td>Принят на работу:</td>
                                    <td>{{ employee.employeeSince|date('d.m.Y') }}</td>
                                </tr>
                                {##}
                                <tr>
                                    <td>Mac Mini</td>
                                    <td>
                                        {% if employee.mac is not null %}
                                            <span class="text-primary">Model: </span>{{ employee.mac.name }}<br>
                                            <span class="text-primary">RAM: </span>{{ employee.mac.ram }}<br>
                                            {% if employee.mac.ssd is not null %}
                                                <span class="text-primary">SSD: </span>{{ employee.mac.ssd }}
                                            {% endif %}
                                            {% if employee.mac.hdd is not null %}
                                                <span class="text-primary">HDD: </span>{{ employee.mac.hdd }}
                                            {% endif %}

                                            {% if is_granted('ROLE_ADMIN') %}

                                                {% if is_granted('ROLE_ADMIN') %}
                                                    <a href="{{ path('free_employee_mac', {'id': employee.id}) }}" class="btn btn-sm btn-danger pull-right">
                                                        Освободить устройство
                                                    </a>
                                                {% endif %}

                                            {% endif %}
                                        {% else %}
                                            <span class="text-danger">нет</span>
                                        {% endif %}
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        Кресло
                                    </td>
                                    <td>
                                        {% if employee.armchair is not null %}
                                            <span class="text-primary">{{ employee.armchair.name }}</span><br>
                                                {% if is_granted('ROLE_ADMIN') %}
                                                    <a href="{{ path('free_employee_armchair', {'id': employee.id}) }}" class="btn btn-sm btn-danger pull-right" >
                                                        Освободить устройство
                                                    </a>
                                                {% endif %}
                                        {% else %}
                                            <span class="text-danger">нет</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <td>Usb Hub</td>
                                    <td>
                                        {% if employee.usbHub is not null %}
                                            <span class="text-primary">{{ employee.usbHub.name }}</span><br>
                                            {% if is_granted('ROLE_ADMIN') %}
                                                <a href="{{ path('free_employee_usbhub', {'id': employee.id}) }}" class="btn btn-sm btn-danger pull-right" >
                                                    Освободить устройство
                                                </a>
                                            {% endif %}
                                        {% else %}
                                            <span class="text-danger">нет</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                <tr>
                                    <td>Email</td>
                                    <td><a href="mailto:info@support.com">info@support.com</a></td>
                                </tr>
                                <td>Phone Number</td>
                                <td>123-4567-890(Landline)<br><br>555-4567-890(Mobile)
                                </td>

                                </tr>

                                </tbody>
                            </table>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('edit_employee', {'id': employee.id}) }}" class="btn btn-primary">Edit</a>
                                <a href="{{ path('export_one', {'id': employee.id}) }}" class="btn btn-primary">Export</a>
                                <br><br>
                                {% if deleteForm is not null %}
                                    {{ form_start(deleteForm, {attr : {onsubmit: 'return confirm("Удалить сотрудника?");' }}) }}
                                    {{ form_widget(deleteForm.submit) }}
                                    {{ form_end(deleteForm) }}
                                {% endif %}
                            {% endif %}
                        </div>
                    </div>
                </div>
        </div>
    </div>
</div>
</div>
{% endblock body %}
