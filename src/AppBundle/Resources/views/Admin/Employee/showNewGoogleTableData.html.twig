{% extends '::base.html.twig' %}

{% block body %}

    {% if new is not empty %}
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2>
                        Обнаружены новые записи:
                    </h2>
                    <table class="table table-striped table-bordered">
                        {% for employee in new %}
                            <tr>
                                <td class="bg-warning">
                                    {{ employee.name }}
                                </td>
                                <td class="bg-warning">
                                    {{ employee.startdate }}
                                </td>
                                <td class="bg-warning">
                                    {{ employee.position }}
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                    <a class="btn btn-lg btn-primary" href="{{ path('import_from_google_table') }}">
                        <span class="glyphicon glyphicon-import"></span>
                        Импортировать
                    </a>
                </div>
            </div>
        </div>
    {% else %}
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="alert alert-danger fade in">
                        <a href="{{ path('homepage') }}" class="close" data-dismiss="alert">&times;</a>
                        <h2>
                            Данные для импортирования не обнаружены
                        </h2>
                    </div>
                </div>
            </div>

        </div>
    {% endif %}

{% endblock %}

